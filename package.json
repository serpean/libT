{
  "name": "libt",
  "version": "1.0.0",
  "description": "LibT is a \"social cataloging\" website that allows individuals to freely search and reviews books, movies, \"series\" and videogames.",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "package/client",
    "package/server",
    "package/merge-api"
  ],
  "scripts": {
    "client": "cd package/client && yarn start",
    "server": "cd package/server && yarn run dev",
    "merge-api": "cd package/merge-api && yarn run dev",
    "dev": "concurrently \"yarn run server\" \"yarn run client\" \"yarn run merge-api\"",
    "build": "cd package/client && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serpean/libT.git"
  },
  "author": "serpean",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/serpean/libT/issues"
  },
  "homepage": "https://github.com/serpean/libT#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "prettier": "^1.16.4"
  }
}
